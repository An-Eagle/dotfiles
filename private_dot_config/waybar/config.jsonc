    },*/
    "custom/logout": {
        "format": "⏻",
        "tooltip": false,
        "on-click": "niri msg action quit"
    },

    "mpris": {
        //"interval": 5,
        "dynamic-order": ["artist", "title"],
        "dynamic-len": 97,
        "format": "{player_icon} {dynamic}",
        "tooltip-format": "{album}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": " "
        },
        "status-icons": {
            "paused": " "
        }
    // "ignored-players": ["firefox"]
    },
    "niri/language": {
        "format": "{}",
        "on-click": "niri msg action switch-layout next",
        "format-en": "En",
        "format-fr": "Fr",
        //"min-length": 10,
        "align": 0.1
    },
    "custom/gsconnect" : {
        "format": "{alt}",
  	"escape": true,
  	"exec": "python3 $HOME/.config/waybar/modules/gsconnect-status.py",
  	"return-type": "json",
	"tooltip-format": "{text}",
  	"interval": 30,
  	"on-click": "/usr/share/gnome-shell/extensions/gsconnect@andyholmes.github.io/gsconnect-preferences"
    },
// Install fuzzel
    "custom/unmount": {
        "format": "{}  ",
        "interval": 10,
        "return-type": "json",
        "exec": "$HOME/.config/waybar/modules/unmount.sh",
        "on-click": "$HOME/.config/waybar/modules/unmount.sh unmount",
        "signal": 10
    },
    "tray": {
        "spacing": 3
    },
// Install cliphist wl-clipboard libnotify fuzzel
    "custom/clipboard": {
        "format": "{}  ",
        "tooltip": false,
        "on-click": "$HOME/.config/waybar/modules/clipboard.sh",
        "on-click-middle": "$HOME/.config/waybar/modules/clipboard.sh wipe"
    },
// Install pavucontrol pipewire-media-session pulseaudio pulseaudio-alsa

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": " {icon} {volume}%",
        "format-bluetooth": "{icon} {volume}% {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pactl set-sink-mute $(pactl info | awk -F ': ' '/Default Sink/ {print $2}') toggle",
        "on-click-right": "pavucontrol"
    },
    "custom/microphone": {
  	"exec": "~/.config/waybar/modules/mic.sh",
  	"interval": 2,
  	//"format": "{text}",
  	"return-type": "json",
  	"on-click": "pactl set-source-mute $(pactl info | awk -F ': ' '/Default Source/ {print $2}') toggle",
  	"on-click-right": "pavucontrol"
    },
}
]
